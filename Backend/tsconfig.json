{
    "compilerOptions": { /* Docs: https://www.typescriptlang.org/tsconfig */
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "checkJs": true,
      "allowJs": true,
      "moduleResolution": "node",
      "types": [
        "node"
      ],
      "lib": [
        "es6"
      ],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowUnreachableCode": true,
      "resolveJsonModule":true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.js",
    //   "./config-dev.json",
    //   "./config-prod.json",
    // "./config-dev.json",

    ],
    "exclude": [
      "node_modules",
      "<node_internals>/**",
    ]
  }